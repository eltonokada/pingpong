<h1 class='page-header'>Leaderboard</h1>

<table class="table table-bordered table-striped">
  <tr>
    <td>Rank</td>
    <td>Name</td>
    <td>Score</td>
    <td>Games Played</td>
  </tr>

  <% @scores.each_with_index do |score, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= score.email %></td>
      <td><%= score.total %></td>
      <td><%= current_user.games.count %>
    </tr>
  <% end %>
</table>

